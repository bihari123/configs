# ============================================================================
# Readline Configuration (~/.inputrc)
# Better bash completion and history navigation
# ============================================================================

# Case-insensitive completion
set completion-ignore-case on

# Show all completions immediately
set show-all-if-ambiguous on

# Append slash to completed directories
set mark-directories on
set mark-symlinked-directories on

# Color completion prefixes
set colored-stats on
set colored-completion-prefix on

# Show file type indicators (* for executable, / for directory, etc.)
set visible-stats on

# Single tab completion (don't need to press Tab twice)
set show-all-if-unmodified on

# Enable menu completion
set menu-complete-display-prefix on

# Use the text that has already been typed as the prefix for searching through commands
# Up/Down arrow keys search history based on what's already typed
"\e[A": history-search-backward
"\e[B": history-search-forward

# Use Ctrl+Left/Right to move between words
"\e[1;5C": forward-word
"\e[1;5D": backward-word

# Use Ctrl+Backspace to delete word
"\C-h": backward-kill-word

# Immediately show all completions without bell
set show-all-if-ambiguous on
set bell-style none

# Horizontal scrolling for long lines
set horizontal-scroll-mode off

# Better completion for partial matches
set completion-prefix-display-length 2

# Colored stats for file type in completion
set colored-stats on

# Page completions if there are many
set page-completions on

# Cycle through completion with Tab (instead of listing all)
# Uncomment if you prefer cycling behavior:
# TAB: menu-complete
# "\e[Z": menu-complete-backward
